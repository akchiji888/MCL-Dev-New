<Application x:Class="MCL_Dev.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MCL_Dev"             
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Panuon.WPF.UI.Themes;component/LightBlue.xaml" />
                <ResourceDictionary>
                    <FontFamily x:Key="Awesome">/Resources/#fontawesome</FontFamily>
                </ResourceDictionary>
                <ResourceDictionary>
                    <Style x:Key="DataGrid_TextStyle" TargetType="TextBlock">
                        <Setter Property="TextAlignment" Value="Center"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>        
    </Application.Resources>
</Application>
